<div class='container'>
  <div class='row justify-content-center align-items-center'>
    <div class='col-6' style='height: 100vh;'>
      <form action='/login' method='POST'>
        <div class='form-group'>
          <input
            type='email'
            name='usuario'
            class='form-control'
            placeholder='mail@mail.com'
          />
        </div>
        <div class='form-group'>
          <input
            type='password'
            name='password'
            class='form-control'
            placeholder='*******'
          />
        </div>
        <div class='form-group'>
          <button
            type='submit'
            class='btn btn-primary btn-block'
          >Ingresar</button>
        </div>
        <div class='form-group'>
          <h5 class='text-info'>{{message}}</h5>
        </div>
      </form>
    </div>
  </div>
</div>